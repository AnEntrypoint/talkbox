{
    "manifest_version": 3,
    "name": "Talkbox",
    "version": "1.0",
    "description": "Secure Message Exchange via Nostr",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "wss://*/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
}